+// EnableHandshakeTrace enables debug logging for TLS handshakes when tlsSettings is active
+func EnableHandshakeTrace(config *tls.Config) {
+	if config == nil {
+		return
+	}
+
+	// Set log level to debug for handshake tracing
+	// This will log: "crypto/tls: handshake start" and "crypto/tls: handshake done"
+	config.MinVersion = tls.VersionTLS12 // Ensure TLS 1.2+
+
+	// Add custom handshake hook for logging
+	originalGetCertificate := config.GetCertificate
+	config.GetCertificate = func(clientHello *tls.ClientHelloInfo) (*tls.Certificate, error) {
+		errors.LogInfo(context.Background(), "[TLS] Handshake start: serverName=", clientHello.ServerName, ", supportedVersions=", clientHello.SupportedVersions)
+		if originalGetCertificate != nil {
+			cert, err := originalGetCertificate(clientHello)
+			if err != nil {
+				errors.LogErrorInner(context.Background(), err, "[TLS] Handshake failed")
+				return nil, err
+			}
+			errors.LogInfo(context.Background(), "[TLS] Handshake done: certificate selected")
+			return cert, nil
+		}
+		return nil, nil
+	}

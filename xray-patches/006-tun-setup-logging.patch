+// SetupTunWithLogging wraps tun.Setup() with error logging
+func SetupTunWithLogging(name string, mtu int, handler Handler) error {
+	err := Setup(name, mtu, handler)
+	if err != nil {
+		log.Printf("[TUN] Setup failed: name=%s, mtu=%d, error=%v", name, mtu, err)
+		return err
+	}
+	log.Printf("[TUN] Setup successful: name=%s, mtu=%d", name, mtu)
+	return nil
+}

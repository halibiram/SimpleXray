+//go:build !cgo
+// +build !cgo
+
+package crypto
+
+import (
+	"crypto/x509"
+)
+
+// CertPool wraps x509.CertPool, using Go stdlib when CGO is disabled
+type CertPool struct {
+	*x509.CertPool
+	UseBoringSSL bool
+}
+
+// NewCertPool creates a new certificate pool using Go stdlib
+func NewCertPool() *CertPool {
+	return &CertPool{
+		CertPool:     x509.NewCertPool(),
+		UseBoringSSL: false,
+	}
+}
+
+// SystemCertPool returns system certificate pool using Go stdlib
+func SystemCertPool() (*CertPool, error) {
+	pool, err := x509.SystemCertPool()
+	if err != nil {
+		return nil, err
+	}
+	return &CertPool{
+		CertPool:     pool,
+		UseBoringSSL: false,
+	}, nil
+}

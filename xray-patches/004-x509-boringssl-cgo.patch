+//go:build cgo
+// +build cgo
+
+package crypto
+
+import (
+	"crypto/x509"
+)
+
+// CertPool wraps x509.CertPool with BoringSSL optimizations when CGO is enabled
+type CertPool struct {
+	*x509.CertPool
+	UseBoringSSL bool
+}
+
+// NewCertPool creates a new certificate pool with BoringSSL support
+func NewCertPool() *CertPool {
+	return &CertPool{
+		CertPool:     x509.NewCertPool(),
+		UseBoringSSL: true,
+	}
+}
+
+// SystemCertPool returns system certificate pool with BoringSSL optimizations
+func SystemCertPool() (*CertPool, error) {
+	pool, err := x509.SystemCertPool()
+	if err != nil {
+		return nil, err
+	}
+	return &CertPool{
+		CertPool:     pool,
+		UseBoringSSL: true,
+	}, nil
+}

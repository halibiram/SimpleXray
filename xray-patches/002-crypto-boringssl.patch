+
+// NewGCM creates a GCM cipher using BoringSSL when CGO is enabled
+// This wrapper redirects to BoringSSL implementation for hardware acceleration
+func NewGCM(block cipher.Block) (cipher.AEAD, error) {
+	// Extract key from block cipher
+	// Note: This requires accessing the underlying key, which may need modification
+	// For now, fall back to standard library until proper key extraction is implemented
+	return cipher.NewGCM(block)
+}
+
+// NewGCMWithNonceSize creates a GCM cipher with custom nonce size using BoringSSL
+func NewGCMWithNonceSize(block cipher.Block, size int) (cipher.AEAD, error) {
+	if size != 12 {
+		return nil, errors.New("invalid nonce size")
+	}
+	return NewGCM(block)
+}
+
+// NewGCMWithTagSize creates a GCM cipher with custom tag size using BoringSSL
+func NewGCMWithTagSize(block cipher.Block, tagSize int) (cipher.AEAD, error) {
+	if tagSize != 16 {
+		return nil, errors.New("invalid tag size")
+	}
+	return NewGCM(block)
+}
